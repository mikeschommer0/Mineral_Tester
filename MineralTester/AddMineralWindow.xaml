<Window x:Class="MineralTester.UI.AddMineralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="AddMineralWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Mineral Name" HorizontalAlignment="Left" Margin="184,75,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Label Content="Hardness" HorizontalAlignment="Left" Margin="184,125,0,0" VerticalAlignment="Top" FontSize="25"/>
        <TextBox Name="MineralNameTextBox" HorizontalAlignment="Left" Margin="400,88,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="MineralHardnessTextBox" HorizontalAlignment="Left" Margin="400,138,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button Content="Add Another Mineral" HorizontalAlignment="Center" Margin="0,331,0,0" VerticalAlignment="Top" Width="150" Click="AddAnotherMineral"/>
        <Button Content="Finish" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Width="150" Click="ExitMineralWindow"/>
        <CheckBox  Content="Reacts With Acid" HorizontalAlignment="Left" Margin="184,175,0,0" VerticalAlignment="Top" FontSize="25"/>
        <CheckBox Content="Magnetic" HorizontalAlignment="Left" Margin="184,225,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Button Content="Add An Image" HorizontalAlignment="Left" Margin="289,285,0,0" Width="100" VerticalAlignment="Top" Click="AddAnImageButton_Click"/>

        <Image Name ="MineralImage" HorizontalAlignment="Left" Height="132" Margin="425,175,0,0" VerticalAlignment="Top" Width="201"/>
    </Grid>
</Window>
