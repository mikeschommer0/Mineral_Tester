<Window x:Class="MineralTester.UI.PracticeQuestionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="Practice Questions" Height="209" Width="510">
    <Grid Background="#FF3E3E42">
        <Label x:Name="lblQuestionCaption" Content="Questions:" Margin="10,24,0,0"/>
        <ComboBox x:Name="cboQuestions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,30,0,0" Width="370" SelectionChanged="cboQuestions_SelectionChanged"/>
        <Label x:Name="lblAnswers" Content="Answers:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
        <ComboBox x:Name="cboAnswers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="370" Margin="112,80,0,0"/>
        <Button x:Name="btnSubmit" Content="Submit" Width="83" Margin="399,119,0,0" Click="btnSubmit_Click"/>
        <Button x:Name="btnExit" Content="Submit" Width="83" Margin="311,119,0,0" Click="ExitClick"/>
    </Grid>
</Window>
