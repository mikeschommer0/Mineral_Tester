<Window x:Class="MineralTester.UI.PlaygroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="PlaygroundWindow" Height="600" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Canvas x:Name="Playground" Margin="50,20,50,120" PreviewMouseMove="Playgroud_PreviewMouseMove" PreviewMouseUp="Playgroud_PreviewMouseUp">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="CornflowerBlue" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Button Content="Practice Questions" FontSize="16" HorizontalAlignment="Left" Margin="100,499,0,0" VerticalAlignment="Top"  Width="180" Height="35" Background="White" Click="DisplayPracticeQuestions" />
        <Button Content="Exit" FontSize="16" HorizontalAlignment="Left" Margin="100,544,0,0" VerticalAlignment="Top"  Width="180" Height="35" Background="White" Click="ExitPlayground" />
        <ListBox Name="MineralList" Height="110" Width="267" Canvas.Left="353" Canvas.Top="464" SelectionChanged="MineralList_SelectionChanged" Margin="340,474,392,0"/>
        <Button Margin="624,498,279,23" Background="White">
            <StackPanel Orientation="Horizontal" Height="53" Width="114">
                <Image Source="images/penny.png" RenderTransformOrigin="0.479,0.75" Width="94" Height="55"/>
            </StackPanel>
        </Button>
        <Button Margin="739,498,165,23" Background="White">
            <StackPanel Orientation="Horizontal" Height="53" Width="92">
                <Image Source="images/magnet.png" RenderTransformOrigin="0.479,0.75" Width="91" Height="46"/>
            </StackPanel>
        </Button>
        <Button Margin="854,498,50,23" Background="White">
            <StackPanel Orientation="Horizontal" Height="53" Width="92">
                <Image Source="images/dropper.png" RenderTransformOrigin="0.479,0.75" Width="91" Height="46"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
