<Window x:Class="MineralTester.UI.MineralsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="Manage Minerals" Height="451" Width="725"  WindowStartupLocation="CenterScreen">
    <Grid Background="#FF3E3E42">
        <DataGrid Name="dgMinerals" HorizontalAlignment="Left" AutoGenerateColumns="True" AutoGeneratingColumn="dgMinerals_AutoGeneratingColumn" Margin="10,10,0,24" Width="528"/>
        <Button Content="Add mineral" Margin="543,10,0,0" Width="150" Click="AddMineralClick"/>
        <Button Content="Update mineral" Margin="543,55,0,0" Width="150" Click="UpdateMineralClick"/>
        <Button Content="Delete mineral" Margin="543,100,0,0" Width="150" Click="DeleteMineralClick"/>
        <Button Content="Exit" Margin="543,145,0,0" Width="150" Click="ExitClick"/>
    </Grid>
</Window>
