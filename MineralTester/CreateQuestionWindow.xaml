<Window x:Class="MineralTester.UI.CreateQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="CreateQuestion" Height="450" Width="800">
    <Grid>
        <Label Content="Minerals:" HorizontalAlignment="Left" Margin="112,111,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Question:" HorizontalAlignment="Left" Margin="106,264,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Answer:" HorizontalAlignment="Left" Margin="414,264,0,0" VerticalAlignment="Top" FontSize="24"/>

        <TextBox HorizontalAlignment="Left" Margin="222,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="512,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox Margin="237,40,237,190"/>
        <Button Content="Add Another Question" HorizontalAlignment="Center" Margin="0,331,0,0" VerticalAlignment="Top" Width="150" Click="AddAnotherProblemButton"/>
        <Button Content="Finish" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Width="150" Click="ExitQuestonWindow"/>
    </Grid>
</Window>
