<Window x:Class="MineralTester.UI.ViewUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineralTester.UI"
        mc:Ignorable="d"
        Title="ViewUsersWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="CornflowerBlue" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Users:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="65" Height="26"/>
        <ListView x:Name="lvUsers" HorizontalAlignment="Center" Height="329" Margin="0,41,0,0" VerticalAlignment="Top" Width="780" SelectionMode="Single"/>
        <Button Content="Update User" HorizontalAlignment="Left" Margin="10,375,0,0" VerticalAlignment="Top"  Width="110" Click="UpdateUser"/>
        <Button Content="Delete User" HorizontalAlignment="Left" Margin="125,375,0,0" VerticalAlignment="Top"  Width="110" Click="DeleteUser"/>
    </Grid>
</Window>
